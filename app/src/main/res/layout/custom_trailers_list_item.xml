<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/trailerThumbnail"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/trailer_thumbnail"
        android:padding="@dimen/detail_spacing_extra_small" />

    <TextView
        android:id="@+id/trailerThumbnailPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trailerThumbnail"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/detail_spacing_small"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />
</RelativeLayout>

